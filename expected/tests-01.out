-- regression tests for icu_ext
CREATE EXTENSION icu_ext;
-- Check that the database has the built-in ICU collations
-- required by the tests
SELECT collname FROM pg_collation WHERE collname IN
 ('und-x-icu', 'en-x-icu')
ORDER BY collname;
 collname  
-----------
 en-x-icu
 und-x-icu
(2 rows)

